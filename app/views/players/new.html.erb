<h1>Create New Player</h1>

<% if @errors && !@errors.empty?%>
    <% @errors.each do |e| %>
        <p><%= e %></p>
    <%end%>
<%end%>

<%= form_for @player do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :player_number %>
<%= f.number_field :player_number%>
<%= f.submit %>
<% end %>

<br>
<%= link_to "Go To Players", players_path %>
</br>