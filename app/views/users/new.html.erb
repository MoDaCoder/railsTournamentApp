<h1>Sign Up</h1>

<% if @errors && !@errors.empty?%>
    <% @errors.each do |e| %>
        <p><%= e %></p>
    <%end%>
<%end%>

<%= form_for @user do |f|%>
  <%= f.label :username%><br>
  <%= f.text_field :username%><br>
  <%= f.label :password%><br>
  <%= f.password_field :password%><br>
  <%= f.submit %>
<%end%>

<br> <%= link_to "Back To Login", login_path %></br>
